[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov

ignore =
    E203,  # Whitespace before ':'
    E501,  # Line too long (handled by max-line-length)
    W503,  # Line break before binary operator
    F401,  # Module imported but unused

per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
